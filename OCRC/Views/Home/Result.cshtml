

@{
    ViewBag.Title = "Sport Search";
}
<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span onclick="openNav()">Filter</span>

    </button>
</div>
<br />
<div class="collapse navbar-collapse">
    <!-- search form -->
    <div class="col-md-10 col-md-offset-2 ">
        <form class="form-inline">
            <div class="form-group ">
                <label for="School" class="sr-only">School</label>
                <input type="text" class="form-control" placeholder="School">
            </div>
            <div class="form-group">
                <label for="Name" class="sr-only">Name</label>
                <input type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="Year" class="sr-only">Year</label>
                <input type="text" class="form-control" placeholder="Year">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>
<br />

<div class="col-md-2">

    <div class="row collapse navbar-collapse">
        <!-- filter start -->


        <form>
            <h3>Filter By Sport</h3>
            @foreach (var item in Model)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> @item.sportName
                    </label>
                </div>
            }



        </form>
        <form class="row form-inline">

            <h3>More Filter</h3>
            <select class="form-control">
                <option value="Grade">Grade</option>
                
                @for (int i = 1; i < 14; i++)
                {
                    <option value="@i">@i th</option>
                }
            </select>

            <select class="form-control">
                <option value="Age">Age</option>
                @for (int i = 5; i < 20; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <br />
            <br />
            <button type="submit" class="btn btn-primary">Search</button>

        </form>
    </div>

</div>

<div class="col-md-10 col-sm-12 col-xs-12">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>twitter</td>
            </tr>
            <tr>
                <th scope="row">4</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>twitter</td>
            </tr>
        </tbody>
    </table>

</div>


<!--slide menu start-->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @Html.Partial("_SearchForm")
    <div class="row">
        <!-- filter start -->
        <div class="col-md-12 col-xs-12">

            <div class="col-xs-10">


                <form>
                    <h3>Filter By Sport</h3>
                    @foreach (var item in Model)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> @item.sportName
                            </label>
                        </div>
                    }



                </form>

                <form>

                    <h3>More Filter</h3>
                    <select class="form-control">
                        <option value="Grade">Grade</option>

                        @for (int i = 1; i < 14; i++)
                        {
                            <option value="@i">@i th</option>
                        }
                    </select>

                    <select class="form-control">
                        <option value="Age">Age</option>
                        @for (int i = 5; i < 20; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-primary">Search</button>

                </form>
            </div>



        </div>

    </div>

</div>
<!--slide menu end-->

<script>
    /* Set the width of the side navigation to 250px */
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    /* Set the width of the side navigation to 0 */
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

